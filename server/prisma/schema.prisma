generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  favTrigger String?
  avatarUrl String?
  triggerInventory String[]
  currentVibe      String?
  emberBalance     Int      @default(10) // Hearth Currency üî•
  balance          Float    @default(0.0) // Somnus 2.0 Economy
  sensoryTolerance Int      @default(5) // 1-10 Scale (1: Whisper only, 10: Loud storms)
  totalFocusMinutes Int     @default(0) // Leveling System ‚≠êÔ∏è
  vibeEmbedding    String?  // Semantic Vibe Tag (Simplified for Railway compatibility)
  
  // Phase 14: Social Sanctuary
  datingPrefs      String[] // e.g. ["Deep Talk", "Silence", "Chill"]
  sensorySafeSpace String?  // e.g. "Rainy Library"
  
  createdAt DateTime @default(now())

  sentWhispers    Whisper[] @relation("Sender")
  receivedWhispers Whisper[] @relation("Receiver")
  
  matchesAsA Match[] @relation("UserA")
  matchesAsB Match[] @relation("UserB")

  sessions ListeningSession[]
}

model ListeningSession {
  id        Int      @id @default(autoincrement())
  userId    Int
  trigger   String
  duration  Int      // Seconds
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model Match {
  id        Int      @id @default(autoincrement())
  userAId   Int
  userBId   Int
  createdAt DateTime @default(now())

  userA     User     @relation("UserA", fields: [userAId], references: [id])
  userB     User     @relation("UserB", fields: [userBId], references: [id])
}

model Whisper {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  audioData  String   // Base64 string for simplicity in MVP
  createdAt  DateTime @default(now())

  sender     User     @relation("Sender", fields: [senderId], references: [id])
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id])
}

model Transaction {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  amount     Float
  type       String   // e.g., "GIFT", "PURCHASE"
  giftType   String?  // e.g., "SOFT_WHISPER", "HAPTIC_PULSE"
  status     String   @default("COMPLETED")
  timestamp  DateTime @default(now())
}
